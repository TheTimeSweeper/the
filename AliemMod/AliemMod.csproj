<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="aliem" />
    <None Remove="aliem.bnk" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="aliem" />
    <EmbeddedResource Include="aliem.bnk" />
  </ItemGroup>

	<ItemGroup>
		<PackageReference Include="BepInEx.Analyzers" Version="1.0.*">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<PackageReference Include="BepInEx.Core" Version="5.4.19" />
		<PackageReference Include="RiskOfRain2.GameLibs" Version="1.2.1-r.1" />
		<PackageReference Include="UnityEngine.Modules" Version="2019.4.26" />
	</ItemGroup>

	<ItemGroup>
	  <Reference Include="Aetherium">
	    <HintPath>..\libs\Aetherium.dll</HintPath>
	  </Reference>
	  <Reference Include="AncientScepter">
	    <HintPath>..\libs\AncientScepter.dll</HintPath>
	  </Reference>
	  <Reference Include="CustomEmotesAPI">
	    <HintPath>..\libs\CustomEmotesAPI.dll</HintPath>
	  </Reference>
	  <Reference Include="MMHOOK_RoR2">
	    <HintPath>..\libs\MMHOOK_RoR2.dll</HintPath>
	  </Reference>
	  <Reference Include="R2API">
	    <HintPath>..\libs\R2API.dll</HintPath>
	  </Reference>
	  <Reference Include="TILER2">
	    <HintPath>..\libs\TILER2.dll</HintPath>
	  </Reference>
	  <Reference Include="TinkersSatchel">
	    <HintPath>..\libs\TinkersSatchel.dll</HintPath>
	  </Reference>
	</ItemGroup>

	<Target Name="PreBuild" BeforeTargets="PreBuildEvent">
	  <Exec Command="copy /Y &quot;$(ProjectDir)..\theUnityProject\AssetBundles\aliem&quot; &quot;$(ProjectDir)&quot;&#xD;&#xA;copy /Y &quot;$(ProjectDir)..\AliemWWISE\GeneratedSoundBanks\Windows\aliem.bnk&quot; &quot;$(ProjectDir)&quot;" />
	</Target>

	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
	  <Exec Command="if &quot;$(Username)&quot; == &quot;Erikbir&quot; copy &quot;$(TargetPath)&quot; &quot;C:\Program Files (x86)\Steam\steamapps\common\Risk of Rain 2\r2modman\BepInEx\plugins\TheTimesweeper-Alien_Hominid&quot;&#xD;&#xA;if &quot;$(Username)&quot; == &quot;Erikbir&quot; mkdir &quot;$(ProjectDir)\..\Release\Aliem&quot;&#xD;&#xA;if &quot;$(Username)&quot; == &quot;Erikbir&quot; copy /Y &quot;$(TargetPath)&quot; &quot;$(ProjectDir)\..\Release\Aliem&quot;&#xD;&#xA;if &quot;$(Username)&quot; == &quot;Erikbir&quot; mkdir &quot;C:\EnforcerBuild\plugins\TheTimesweeper-Alien_Hominid&quot;&#xD;&#xA;if &quot;$(Username)&quot; == &quot;Erikbir&quot; copy /Y &quot;$(TargetPath)&quot; &quot;C:\EnforcerBuild\plugins\TheTimesweeper-Alien_Hominid&quot;" />
	</Target>
	
</Project>
